doctype html
html(lang="en")
  head
    title= pageTitle
    script(type='text/javascript').
  body
    h1=singer.name
    p Age: #{singer.age}
    p Gender: #{singer.gender}
    p Genre: #{singer.genre}
    a(href=`/singers/${singer.id}/edit`)
      button Edit this Singer
    form(action=`/singers/${singer.id}?_method=DELETE` method='post')
      input(type='submit' value='Delete this singer')
    
